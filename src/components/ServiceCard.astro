---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow p-6 border border-gray-100">
  {icon && (
    <div class="mb-4">
      <div class="h-12 w-12 bg-leather-100 rounded-lg flex items-center justify-center">
        <span class="text-2xl">{icon}</span>
      </div>
    </div>
  )}
  
  <h3 class="text-xl font-semibold text-gray-900 mb-3">
    {title}
  </h3>
  
  <p class="text-gray-600 leading-relaxed">
    {description}
  </p>
</div>
