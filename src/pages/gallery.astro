---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import GalleryItem from '../components/GalleryItem.astro';

// Placeholder gallery items - replace with real images
const galleryItems = [
  {
    beforeImage: '/images/R_PP_MT_before.jpeg',
    afterImage: '/images/R_PP_MT_after.jpeg',
    title: 'Rawlings Pro Preferred Modified Trapeze',
    services: 'Clean, Condition, Palm Adhesive, Relace',
    commentary: 'Gorgeous high-quality glove. Now looks and feels almost like new.',
  },
  {
    beforeImage: '/images/E_Core_before.jpeg',
    afterImage: '/images/E_Core_after.jpeg',
    title: 'Easton Core',
    services: 'Clean, Condition, Relace',
    commentary: 'Breathed enough life into this well-used gamer to last another season.',
  },
  {
    beforeImage: '/images/44_Pro_before.jpeg',
    afterImage: '/images/44_Pro_after.jpeg',
    title: '44 Pro',
    services: 'Relace',
    commentary: 'Full relace to better match glove logos.',
  },
];
---

<Layout
  title="Gallery"
  description="See our baseball glove restoration work. Before and after photos showcasing cleaning, conditioning, relacing, and repair services."
>
  <Header />
  
  <Hero
    title="Our Restoration Work"
    subtitle="See the transformation. Every glove tells a story, and we're honored to help preserve these stories through restoration."
  />

  <!-- Gallery Grid -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {galleryItems.map((item) => (
          <GalleryItem
            beforeImage={item.beforeImage}
            afterImage={item.afterImage}
            title={item.title}
            services={item.services}
            commentary={item.commentary}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Placeholder Notice -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <div class="bg-leather-100 border-l-4 border-leather-700 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            More Photos Coming Soon
          </h3>
          <p class="text-gray-700 mb-4">
            We're actively building our portfolio. Follow us on Instagram to see our latest restoration projects and before & after photos in real-time.
          </p>
          <a
            href="https://instagram.com/gloveaffairs"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-leather-700 font-semibold hover:text-leather-800 transition-colors"
          >
            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            Follow @gloveaffairs on Instagram
            <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-leather-800 text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Your Glove Could Be Next
        </h2>
        <p class="text-xl mb-8 text-leather-100">
          Ready to restore your baseball glove? Get in touch to discuss your restoration project.
        </p>
        <a href="/contact" class="btn-primary bg-white text-leather-800 hover:bg-leather-100">
          Contact Us
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
