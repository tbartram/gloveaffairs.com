---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';

const featuredServices = [
  {
    title: 'Cleaning & Conditioning',
    description: 'Deep cleaning and conditioning to restore leather suppleness and remove years of dirt and grime.',
    icon: 'ðŸ§¼',
  },
  {
    title: 'Relacing',
    description: 'Relacing with high-quality leather laces. Match your glove\'s original colors and patterns or customize to your preference.',
    icon: 'ðŸ§µ',
  },
  {
    title: 'Palm Adhesive Replacement',
    description: 'Replace palm adhesive to restore the pocket and feel of your glove.',
    icon: 'âœ‹',
  },
  {
    title: 'Leather Repairs & Patching',
    description: 'Repairs for tears, holes, and damaged leather. Preserve your glove\'s integrity and extend its life.',
    icon: 'ðŸ”§',
  },
];
---

<Layout title="Glove Affairs">
  <Header />
  
  <!-- Hero Section -->
  <Hero
    title="Keeping Your Glove in the Game"
    subtitle="Baseball and softball glove restoration services. Clean, condition, customize, relace, repair. Bring your favourite gloves back to life."
    ctaText="View Our Services"
    ctaLink="/services"
    secondaryCtaText="See Our Work"
    secondaryCtaLink="/gallery"
  />

  <!-- About Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          Work You Can Trust
        </h2>
        <p class="text-lg text-gray-600 leading-relaxed mb-4">
          At Glove Affairs, we understand the bond between a player and their glove. Whether it's a cherished family heirloom or your go-to game glove, we treat each restoration with the care and attention it deserves.
        </p>
        <p class="text-lg text-gray-600 leading-relaxed">
          From minor fixes to deep cleaning to complete relacing, our restoration services will have your glove looking and feeling better than ever.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Services -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Our Services
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Comprehensive restoration services to bring your baseball glove back to life
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {featuredServices.map((service) => (
          <ServiceCard
            title={service.title}
            description={service.description}
            icon={service.icon}
          />
        ))}
      </div>

      <div class="text-center mt-12">
        <a href="/services" class="btn-primary">
          View All Services
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-leather-800 text-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready to Restore Your Glove?
        </h2>
        <p class="text-xl mb-8 text-leather-100">
          Follow us on Instagram to see our latest work and get in touch about your restoration project.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://instagram.com/gloveaffairs"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-base font-medium rounded-md text-white hover:bg-white hover:text-leather-800 transition-colors"
          >
            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
